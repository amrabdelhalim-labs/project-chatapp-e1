PORT=5000
hostname=localhost
MONGODB_URL=mongodb://127.0.0.1:27017/mychat
JWT_SECRET=your_jwt_secret_here

# Storage Configuration
# Options: local | cloudinary | s3 (default: local)
STORAGE_TYPE=local

# Cloudinary (when STORAGE_TYPE=cloudinary)
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=
# CLOUDINARY_FOLDER=mychat-profiles

# AWS S3 (when STORAGE_TYPE=s3)
# AWS_S3_BUCKET=
# AWS_REGION=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_FOLDER=uploads/profiles
