{
  "name": "chatapp",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "test:ci": "jest --watchAll=false",
    "test:build": "node scripts/check-build.js",
    "test:build:quick": "node scripts/check-build.js --quick",
    "test:bundle": "expo export --platform ios --output-dir .build-test --no-bytecode && echo 'âœ” Bundle OK' && npx rimraf .build-test",
    "test:full": "npm run test:build:quick && npm run test:ci",
    "format": "prettier --write \"**/*.{js,jsx}\"",
    "format:check": "prettier --check \"**/*.{js,jsx}\""
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/bottom-tabs": "^7.7.3",
    "@react-navigation/drawer": "^7.7.2",
    "@react-navigation/material-top-tabs": "^7.4.2",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/native-stack": "^7.6.2",
    "axios": "^1.13.1",
    "expo": "~54.0.20",
    "expo-image-picker": "~17.0.8",
    "expo-modules-core": "^3.0.29",
    "expo-status-bar": "~3.0.8",
    "formik": "^2.4.6",
    "moment": "^2.30.1",
    "native-base": "^3.4.28",
    "normalize-css-color": "^1.0.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-pager-view": "6.9.1",
    "react-native-reanimated": "^4.1.3",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "^15.15.3",
    "react-native-tab-view": "^4.2.0",
    "react-native-vector-icons": "^10.3.0",
    "react-native-web": "^0.21.0",
    "socket.io-client": "^4.8.1",
    "sync-storage": "^0.4.2",
    "yup": "^1.7.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/react-native": "^13.3.3",
    "babel-preset-expo": "~54.0.0",
    "jest": "^30.2.0",
    "jest-expo": "^54.0.17",
    "react-native-dotenv": "^3.4.11",
    "react-native-worklets": "^0.7.4",
    "react-test-renderer": "^19.1.0"
  },
  "private": true,
  "jest": {
    "preset": "jest-expo",
    "setupFiles": [
      "./tests/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/android/",
      "/ios/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|zustand|axios)"
    ],
    "moduleNameMapper": {
      "^@env$": "<rootDir>/tests/__mocks__/@env.js",
      "^expo/src/winter/runtime\\.native$": "<rootDir>/tests/__mocks__/expo-winter-runtime.js",
      "^expo/src/winter$": "<rootDir>/tests/__mocks__/expo-winter-runtime.js"
    }
  }
}
